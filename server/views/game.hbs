<div class="grid-test">
  <div class="grid-left">
    <div class="card card-opponent card-disabled"></div>
    <div class="card card-opponent card-disabled"></div>
    <div class="card card-opponent card-disabled"></div>
  </div>
  <div class="grid-top">
    <div class="grid-top-retract">
      <div class="card card-disabled"></div>
      <div class="card card-disabled"></div>
      <div class="card card-disabled"></div>
    </div>
  </div>
  <div class="grid-center">
    <div class="card card-special"></div>
  </div>
  <div class="grid-right">
    <div class="card card-opponent card-disabled"></div>
    <div class="card card-opponent card-disabled"></div>
    <div class="card card-opponent card-disabled"></div>
  </div>
  <div class="grid-bottom">
    <div class='hand'>
      <div class='hand__cards'>
        {{#each cards}}
            {{>card}}
        {{/each}}
    </div>
  <hr>
  <div class='hand__header'>
    <span class="hand__user">Murrays {{user_name}} Hand</span>
    <span class="hand__user">score: {{score}} 1</span>
  </div>
</div>
</div>